C++ (Approach 1)
#include <vector>
class Solution {
public:
    std::vector<int> sumZero(int n) {
        std::vector<int> res;
        if (n % 2 != 0) {
            res.push_back(0);
        }
        for (int i = 1; i <= n / 2; i++) {
            res.push_back(i);
            res.push_back(-i);
        }
        return res;
    }
};

Python (Approach 2)
from typing import List

class Solution:
    def sumZero(self, n: int) -> List[int]:
        ans = [0] * n
        for i in range(n):
            ans[i] = 2 * i - n + 1
        return ans

C++ (Approach 2)

#include <vector>
class Solution {
public:
    std::vector<int> sumZero(int n) {
        std::vector<int> a(n);
        for (int i = 0; i < n; i++) {
            a[i] = 2 * i - n + 1;
        }
        return a;
    }
};
