class Solution {
public:
    bool reorderedPowerOf2(int n) {
        string original = to_string(n);
        sort(original.begin(), original.end());
        for (int i = 0; i <= 30; i++) {
            int power = 1 << i; 
            string powerStr = to_string(power);
            sort(powerStr.begin(),
                 powerStr.end()); 
            if (original == powerStr) {
                return true;
            }
        }
        return false;
    }
};
