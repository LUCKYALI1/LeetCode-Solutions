#include <vector>
using namespace std;

// LeetCode: Plus One
// Simulates adding 1 to a number represented as an array of digits.
class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int n = digits.size();
        for (int i = n - 1; i >= 0; i--) {
            // If digit is 9, it becomes 0 (carry continues)
            if (digits[i] == 9) {
                digits[i] = 0;
            } 
            else {
                digits[i]++;
                return digits;
            }
        }

        // If we reached here, all digits were 9 (e.g. 999 -> 1000)
        digits.insert(digits.begin(), 1);
        return digits;
    }
};
